# Environment
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# Server
BASE_URL=https://yourdomain.com
HOST=0.0.0.0
PORT=8000

# Twilio
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+15555551234

# OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1024
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=10.0

# Deepgram (STT)
DEEPGRAM_API_KEY=your_deepgram_api_key

# Google Cloud (TTS & Translation)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Language
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,ar
MIN_LANGUAGE_CONFIDENCE=0.7
TRANSLATION_TIMEOUT=2.0

# Database
DATABASE_URL=postgresql://user:pass@localhost/restaurant
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20

# Session/Call Settings
MAX_CALL_DURATION=1800
MAX_SILENCE_DURATION=30
MAX_AI_RESPONSE_TIME=10
GREETING_TIMEOUT=5
TRANSFER_TIMEOUT=30

# Feature Flags
ENABLE_LANGUAGE_DETECTION=true
ENABLE_TRANSLATION=true
ENABLE_TRANSFER=true
ENABLE_UPSELL=true
ENABLE_SMS=true
ENABLE_MEMORY=true
